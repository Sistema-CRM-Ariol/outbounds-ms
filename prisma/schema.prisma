generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum OutboundOrderStatus {
    Pendiente
    Preparando
    Lista
    Despachada
    Completada
    Cancelada
}

enum OutboundOrderType {
    Venta
    Cotizacion
}

model OutboundOrder {
    id          String            @id @default(uuid())
    orderNumber String            @unique // OUT-2024-001 o VEN-2024-001
    orderType   OutboundOrderType // Venta o Cotización

    issueDate        DateTime  @default(now())
    expectedDispatch DateTime?
    actualDispatch   DateTime?

    // Cliente
    customerId   String
    customerName String

    // Almacén de origen (de dónde sale)
    warehouseId   String
    warehouseName String?

    // Montos
    subtotal Decimal @db.Decimal(12, 2)
    tax      Decimal @default(0) @db.Decimal(12, 2)
    discount Decimal @default(0) @db.Decimal(12, 2)
    total    Decimal @db.Decimal(12, 2)
    currency String  @default("USD")

    // Información de envío
    shippingAddress String?
    shippingMethod  String? // Retiro, Courier, Delivery
    carrier         String? // DHL, FedEx, UPS
    trackingNumber  String?

    // Estado y notas
    status OutboundOrderStatus @default(Pendiente)
    notes  String?

    // Auditoría
    createdBy     String // User ID
    createdByName String?

    items OutboundOrderItem[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("outbound_orders")
}

model OutboundOrderItem {
    id              Int           @id @default(autoincrement())
    outboundOrderId String
    outboundOrder   OutboundOrder @relation(fields: [outboundOrderId], references: [id], onDelete: Cascade)

    productId            String
    productName          String
    productSerialNumber String?

    quantityOrdered    Int
    quantityDispatched Int? @default(0)

    unitPrice Decimal @db.Decimal(12, 2)
    discount  Decimal @default(0) @db.Decimal(12, 2)
    subtotal  Decimal @db.Decimal(12, 2)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("outbound_order_items")
}
